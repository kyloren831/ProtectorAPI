
@{
}
<div class="container pt-lg-5  mt-lg-5">
    <div class="row justify-content-center align-items-center gx-5">
      <div class="col-12 col-md-5 d-flex justify-content-center mb-4 mb-md-0">
            <img src="@Url.Content("~/img/ProtectorAPP/IconoProtector.png")"
          alt="PROTECTOR IMAGE"
          class="img-fluid"
          style="max-width: 500px; height: auto;"
        />
      </div>
      <div class="col-12 col-md-5">
            @if (ViewBag.Error != null)
            {
                <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
                    @ViewBag.Error
                </div>
            }
        <form asp-action="Login" asp-controller="Auth" method="post" class="w-full space-y-4">
          <h2>Inicio de Sesión</h2>
          <div class="mb-3">
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="Correo electrónico"
              required
            />
          </div>
          <div class="mb-3 position-relative">
            <input
              type="password"
                           name="password"
              id="Contrasena"
              class="form-control"
              placeholder="Contraseña"
              required
            />
                    <div class="btn text-light" onclick="togglePassword()">
                        Ver contraseña
                    </div>
          </div>
          <div class="forgot-password">¿Olvidó su contraseña?</div>
          <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
        </form>
      </div>
    </div>
  </div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById("Contrasena");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>
}
  @section Styles{
    <style>

        .form-control,
        .form-control:focus {
            background-color: transparent;
            border: 1px solid #9ca3af; /* Tailwind gray-400 */
            color: #d1d5db; /* Tailwind gray-300 text color */
            box-shadow: none;
        }

            .form-control::placeholder {
                color: #9ca3af; /* Tailwind gray-400 */
            }

            .form-control:focus {
                border-color: #2563eb; /* Tailwind blue-600 */
                box-shadow: 0 0 0 0.25rem rgb(59 130 246 / 0.25);
                background-color: transparent;
                color: white;
            }

        .btn-blue {
            background-color: #2563eb; /* Tailwind blue-600 */
            color: white;
            width: 112px;
        }

            .btn-blue:hover,
            .btn-blue:focus {
                background-color: #1d4ed8; /* darker blue */
                color: white;
            }

        .password-eye {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            cursor: pointer;
            user-select: none;
        }

        .forgot-password {
            font-size: 0.75rem;
            font-weight: 600;
            color: white;
            text-align: right;
            margin-top: -1rem;
            margin-bottom: 1rem;
            cursor: pointer;
        }

        h2 {
            font-family: serif;
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: white;
        }
    </style>
  }

