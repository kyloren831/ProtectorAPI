@model ProtectorAPP.Models.PostUsuario

@{
    ViewData["Title"] = "Create";
}
<div class="main-container d-flex justify-content-center">

    <div class="d-flex align-items-center justify-content-center">
        <div class="" style="width:75%">
            <!-- Ajustamos el ancho del formulario -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FotoUrl" class="control-label"></label>
                    <input asp-for="FotoUrl" class="form-control" />
                    <span asp-validation-for="FotoUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between">
                    <!-- Flexbox para los botones -->
                    <button type="submit" class="btn text-white" style="background-color:#f97316; width:48%;"> Crear nuevo</button>
                    <a asp-action="Index" class="btn btn-primary" style="width:48%;">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Usuarios/Create.css" />
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
